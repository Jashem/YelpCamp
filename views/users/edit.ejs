<% include ../partials/header %>
<div class="container">
	<div class="row">
		<div class="col-xs-12 col-mid-12 col-lg-12">
			<h1 style="text-align: center;">Edit User Profile</h1>
			<div style="width: 30%; margin: 25px auto;">
				<form action="/<%= user.username%>?_method=PUT" method="POST">
					<div class="form-group">
						<input class="form-control" type="text" name="username" value="<%= user.username%>">
					</div>
					<div class="form-group">
						<input class="form-control" type="password" name="oldPassword" placeholder="Old password">
					</div>					
					<div class="form-group">
						<input class="form-control" type="password" name="newPassword" placeholder="New password">
					</div>
					<div class="form-group">
						<input class="btn btn-lg btn-primary btn-block" type="submit" name="" value="Edit">
					</div>
				</form>
			</div>
		</div>
		
	</div>
</div>
<% include ../partials/footer %>